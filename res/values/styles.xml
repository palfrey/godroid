<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.NoBackground" parent="android:Theme.Black.NoTitleBar"/>
	<style name="FillParent">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	<style name="WrapContent">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="TextDialogEntry" parent="@style/WrapContent">
		<item name="android:textAppearance">
			@android:style/TextAppearance.Theme.Dialog
		</item>
	</style>
	<style name="SpinnerDialogEntry" parent="@style/WrapContent">
		<item name="android:choiceMode">singleChoice</item>
	</style>
	<style name="TableLayoutTextBase" parent="@style/WrapContent">
		<item name="android:textColor">@color/textColor</item>
		<item name="android:shadowColor">@color/shadowColor</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
		<item name="android:scrollHorizontally">false</item>
	</style>
	<style name="TableLayoutText" parent="@style/TableLayoutTextBase">
		<item name="android:textAppearance">
			@android:style/TextAppearance.Medium
		</item>
	</style>
	<style name="TableLayoutTextCentered" parent="@style/TableLayoutText">
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="SmallProgressBar"
		parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
</resources>